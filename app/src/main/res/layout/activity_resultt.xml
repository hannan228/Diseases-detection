<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Resultt">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result of symptoms will appear here"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:padding="20dp"
                android:layout_marginTop="30dp"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Name: "
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/textPatientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdul"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    ></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Name: "
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/textPatientAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    ></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Gender: "
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/textGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MALE"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    ></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pain Symptoms Result: "
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/textPain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no result"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fever Symptoms Result: "
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/textfever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no result"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diarrhoea Symptoms Result: "
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/textDiarrhoea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no result"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headache Symptoms Result: "
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/textHeadache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no result"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nausea Symptoms Result: "
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/textNausea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no result"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    ></TextView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>